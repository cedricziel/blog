{% extends 'layout.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% for post in posts %}
                    <article>
                        <header>
                            <h1>{{ post.title }}</h1>
                        </header>
                        {{ post.body|raw }}
                    </article>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
